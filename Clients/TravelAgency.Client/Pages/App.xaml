<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:TravelAgency.Client"
             xmlns:converters="clr-namespace:TravelAgency.Client.ValueConverters"
             xmlns:services="clr-namespace:TravelAgency.Client.Services"
             x:Class="TravelAgency.Client.Pages.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="../Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <converters:ThemeNameConverter x:Key="ThemeNameConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
