<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="TravelAgency.Client.Pages.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:TravelAgency.Client.Pages"
    xmlns:main="using:TravelAgency.Client.Pages.Main"
    xmlns:login="using:TravelAgency.Client.Auth.Pages"
    xmlns:test="using:TravelAgency.Client.Pages.Test"
    Shell.FlyoutBehavior="Flyout">

    <ShellContent
        Title="Main"
        ContentTemplate="{DataTemplate main:MainPage}"
        Route="MainPage" FlyoutItemIsVisible="True" />

    <ShellContent
        Title="Test"
        ContentTemplate="{DataTemplate test:TestPage}"
        Route="TestPage" FlyoutItemIsVisible="True" />

    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate login:LoginPage}"
        Route="LoginPage" FlyoutItemIsVisible="False" />

</Shell>
